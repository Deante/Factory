<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="00000000000003" author="TGR">
        <createTable tableName="stagiaire_materiel">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="stagiaire_id" type="bigint"/>
            <column name="ordinateur_id" type="bigint"/>
            <column name="formation_id" type="bigint"/>
        </createTable>
    </changeSet>
	
	<changeSet id="00000000000004" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="stagiaire_id"
                                 baseTableName="stagiaire_materiel"
                                 constraintName="fk_materiel_stagiaire_stag_id"
                                 referencedColumnNames="id"
                                 referencedTableName="stagiaire"/>
								 
        <addForeignKeyConstraint baseColumnNames="ordinateur_id"
                                 baseTableName="stagiaire_materiel"
                                 constraintName="fk_materiel_stagiaire_ordi_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ordinateur"/>
								 
        <addForeignKeyConstraint baseColumnNames="formation_id"
                                 baseTableName="stagiaire_materiel"
                                 constraintName="fk_materiel_stagiaire_forma_id"
                                 referencedColumnNames="id"
                                 referencedTableName="formation"/>
    </changeSet>

</databaseChangeLog>
